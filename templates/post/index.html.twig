{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        {% for post in posts %}
        <div class="col-4 my-3">
            <div class="card" style="width: 18rem; height:350px;">
                <img src="{{ post.img }}" class="card-img-top" alt="lorem ipsum">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <!-- <p class="card-text text-right">{{ post.content }} $</p> -->
                </div>
                <div class="card-footer">
                    <a href="" class="btn btn-primary">Lire plus</a>
                    <div class="text-right">
                        <a href="{{ path('post_like', {'id' : post.id }) }}" class="btn btn-link js-like">
                            {% if app.user and post.isLikedByUser(app.user) %}
                            <i class="fas fa-thumbs-up"></i>
                            {% else %}
                            <i class="far fa-thumbs-up"></i>
                            {% endif %}
                            <span class="js-link-count">{{ post.likes | length }}</span>
                            {% if app.user and post.isLikedByUser(app.user) %}
                            <span class="js-link-label">JE N'AIME PLUS</span>
                            {% else %}
                            <span class="js-link-label">J'AIME</span>
                            {% endif %}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}